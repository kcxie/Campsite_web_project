<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center; margin:0.5em">Add a new comment to <%= campground.name%></h1>
    <div class="col" style="margin:0 auto; width:40%">

        <form action="/campgrounds/<%= campground._id %>/comments" method="POST"> 
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>  

        <div class="form-group">
            <button class="btn btn-lg btn-secondary btn-block btn-sm">Submit!</button>
        </div>
        </form>
        
        <a href="/campgrounds">Go Back</a>
    </div>
     

</div>

<% include ../partials/footer %>